<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.example.android.bluetoothchat.Solitaire_game"

    android:background="@drawable/back001"
    >

    <com.example.android.bluetoothchat.solitaire_game_view
        android:id="@+id/gameVIew1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="127dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/button01"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="BACK" />

    <Button
        android:id="@+id/button5"
        android:layout_width="127dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/button01"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button7"
        android:text="重玩" />

    <Button
        android:id="@+id/button7"
        android:layout_width="127dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/button01"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button"
        android:text="音樂關" />

</RelativeLayout>